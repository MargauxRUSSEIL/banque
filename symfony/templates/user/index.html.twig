{% extends 'base.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}
<div class="index">
    <h1>User index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Username</th>
                <th>Roles</th>
                <th>Firstname</th>
                <th>Lastname</th>
                <th>Birthday</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.username }}</td>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                <td>{{ user.firstname }}</td>
                <td>{{ user.lastname }}</td>
                <td>{{ user.birthday ? user.birthday|date('Y-m-d') : '' }}</td>
                <td>
                    <a class="btn" href="{{ path('user_show', {'id': user.id}) }}">show</a>
                    <a class="btn" href="{{ path('user_edit', {'id': user.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <br/>
    <a class="btn" href="{{ path('app_register') }}">Ajouter un client</a>
    <a class="btn" href="{{ path('index') }}">Accueil</a>
</div>
{% endblock %}
